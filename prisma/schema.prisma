generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String?
}

model Codes {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String
  user      String?
  award     Int?     @default(0)
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
